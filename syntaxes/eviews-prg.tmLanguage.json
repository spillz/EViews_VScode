{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "EViews Scripting Language",
	"patterns": [
		{
			"include": "#commentDeclarations"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#scalars"
		},
		{
			"include": "#string-var"
		},
		{
			"include": "#scalar-var"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#objects"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#vars"
		},
		{
			"include": "#commands-with-strings"
		},
		{
			"include": "#commands"
		}
	],
	"repository": {
		"commentDeclarations": {
			"begin": "(?i)\\'@type",
			"end": "\\n",
			"name": "keyword"
		},
		"comments": {
			"begin": "\\'",
			"end":"\\n",
			"name": "comment"
		},
		"keywords": {
			"name": "keyword",
			"match": "^(?i)\\s+(call|else|endif|endsub|exitloop|for|if|include|next|return|sleep|stop|subroutine|wend|while)\\b"
		},
		"extkeywords": {
			"name": "keyword",
			"match": "\\b(?i)(then|to|step)\\b"			
		},
		"strings": {
			"name": "string",
			"match": "\"(\"\"|[^\"]*)\""
		},
		"commands-with-strings": {
			"match": "^\\s*(logmsg)\\s+([^']*)",
			"captures": {
				"1": {
					"name": "command"
				},
				"2": {
					"name": "string"
				}
			}
		},
		"commands": {
			"match": "^\\s*(\\w+)\\s+([^']*)",
			"captures": {
				"1": {
					"name": "command"
				},
				"2": {
					"name": "command"
				}
			}
		},
		"scalars": {
			"match":
			  "-?\\b((0(x|X)[0-9a-fA-F]*)|(([0-9]+\\.?[0-9]*)|(\\.[0-9]+))((e|E)(\\+|-)?[0-9]+)?)\\b",
			"name": "constant.numeric"
		},
		"scalar-var": {
			"match":
			  "!\\b[a-zA-Z_]\\w*\\b",
			"name": "variable.parameter"
		},
		"string-var": {
			"match":
			  "%\\b[a-zA-Z_]\\w*\\b",
			"name": "variable.parameter"
		},
		"functions": {
			"match": "@\\b[a-zA-Z_]\\w*\\b",
			"name": "support.function"
		},
		"vars": {
			"match":
			  "\\b[a-zA-Z_]\\w*\\b",
			"name": "other"
		},
		"objects": {
			"captures": {
			  "1": {
				"name": "entity.name.class"
			  },
			  "2": {
				"name": "variable"
			  }
			},
			"match":
			  "^\\s*\\b(?i)(alpha|model|svector|coef|pool|sym|equation|rowvector|system|factor|sample|table|geomap|scalar|text|graph|series|userobj|group|spool|valmap|logl|sspace|var|matrix|string|vector)\\b\\s*\\b(([_a-zA-Z]\\w*?|\\{\\%[_a-zA-Z]\\w*?\\})(\\w*|{\\%[_a-zA-Z]\\w*?\\})?)\\b",
			"name": "object.definition"
		},
		"operators": {
			"match":
			  "(!|\\+|-|\\*|/|<>|=|<=|>=|\\^|\\b(?i)(and|or)\\b)",
			"name": "keyword.operator"
		}
		
	},
	"scopeName": "source.eviews"
}

